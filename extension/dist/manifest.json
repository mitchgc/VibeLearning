{
  "manifest_version": 3,
  "name": "VibeLearning - Universal Software Training Assistant",
  "version": "1.0.0",
  "description": "Real-time guidance for any software application",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "sidePanel"
  ],
  "optional_permissions": [
    "tabs"
  ],
  "host_permissions": [
    "https://*.workday.com/*",
    "https://*.youtube.com/*",
    "https://*.github.com/*",
    "https://mail.google.com/*"
  ],
  "optional_host_permissions": [
    "https://*.salesforce.com/*",
    "https://*.servicenow.com/*",
    "https://*.concur.com/*",
    "https://*.dynamics.com/*",
    "https://*.netsuite.com/*"
  ],
  "background": {
    "service_worker": "service-worker-loader.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": [
        "assets/content-interactive.ts-rtrK1uAQ.js"
      ],
      "matches": [
        "https://*.workday.com/*",
        "https://*.youtube.com/*",
        "https://*.github.com/*",
        "https://mail.google.com/*"
      ],
      "css": [
        "src/styles/overlay.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "matches": [
        "<all_urls>"
      ],
      "resources": [
        "src/styles/shepherd-theme.css"
      ],
      "use_dynamic_url": false
    },
    {
      "matches": [
        "https://*.github.com/*",
        "https://*.workday.com/*",
        "https://*.youtube.com/*",
        "https://mail.google.com/*"
      ],
      "resources": [
        "assets/content-interactive.ts-rtrK1uAQ.js"
      ],
      "use_dynamic_url": false
    }
  ]
}
